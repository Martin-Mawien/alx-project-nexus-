# Django Settings
SECRET_KEY=your-secret-key-here-generate-using-django-command
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=config.settings.development

# Database Configuration
# PostgreSQL (Recommended for Production)
DATABASE_URL=postgresql://username:password@localhost:5432/jobboard_db

# SQLite (For Development Only)
# DATABASE_URL=sqlite:///db.sqlite3

# JWT Authentication Settings
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=1440  # minutes (24 hours)
JWT_ALGORITHM=HS256

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Email Addresses
DEFAULT_FROM_EMAIL=noreply@jobboard-api.com
ADMIN_EMAIL=admin@jobboard-api.com

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Redis Configuration (Optional - for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (Optional - for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload Settings
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_EXTENSIONS=pdf,doc,docx

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# API Settings
API_VERSION=v1
API_TITLE=Job Board API
API_DESCRIPTION=RESTful API for Job Board Application

# Security Settings
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
CSRF_COOKIE_SECURE=False  # Set to True in production with HTTPS
SECURE_SSL_REDIRECT=False  # Set to True in production with HTTPS

# Sentry Configuration (Optional - for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# AWS S3 Configuration (Optional - for file storage)
# USE_S3=False
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Render Deployment (for production)
# RENDER=True
# RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com

# Rate Limiting
RATE_LIMIT_ANON=100/hour
RATE_LIMIT_USER=1000/hour

# Logging
LOG_LEVEL=INFO

# Timezone
TIME_ZONE=UTC
USE_TZ=True

# Language
LANGUAGE_CODE=en-us
